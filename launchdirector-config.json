{
  "system": {
    "name": "launchdirector",
    "log_level": "debug",
    "ntp_server": "172.16.30.2",
    "tz": "Americas/New_York",
    "i2c": {
      "bus_id": 1
    }
  },
  "controls": [
    {
      "name": "s5_stage1",
      "type": "gpio",
      "pin": "D22"
    },
    {
      "name": "s5_stage2",
      "type": "gpio",
      "pin": "D23"
    },
    {
      "name": "s5_stage3",
      "type": "gpio",
      "pin": "D24"
    },
    {
      "name": "ISS",
      "type": "gpio",
      "pin": "D25"
    }
  ],
  "displays":[
    {
      "name": "main",
      "type": "bigseg7x4",
      "address": "0x70",
      "idle":{
        "show": "time",
        "brightness": 0.25
      }
    },
    {
      "name": "lower_left",
      "type": "seg7x4",
      "address": "0x71",
      "idle":{
        "show": "date",
        "brightness": "foo"
      }
    },
    {
      "name": "lower_right",
      "type": "seg7x4",
      "address": "0x72",
      "idle": {
        "show": "blank"
      }
    }
  ],
  "scripts": {
    "dir": "scripts",
    "scan_dir": "False",
    "files": [
      "saturn5_full.json",
      "test.json",
      "none.json"
    ]
  }
}